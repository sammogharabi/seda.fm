# Frontend Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# ============================================
# FEATURE FLAGS
# ============================================
# Set to 'false' to show ONLY the about page (hide login/signup)
# Set to 'true' to enable the full application with authentication
VITE_ENABLE_AUTH=false

# ============================================
# API CONFIGURATION
# ============================================
# Your Vercel backend URL (e.g., https://your-backend.vercel.app)
VITE_API_URL=https://your-backend-url.vercel.app

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous key (safe for client-side use)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
